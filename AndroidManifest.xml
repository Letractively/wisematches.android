<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="wisematches.client.android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <uses-feature
            android:name="android.hardware.screen.landscape"
            android:required="true"/>

    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="true"/>

    <application
            android:name=".WiseMatchesApplication"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.WM"
            android:hardwareAccelerated="true"
            android:screenOrientation="landscape">

        <service
                android:name=".security.auth.AuthenticationService"
                android:exported="true">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>


            <meta-data
                    android:name="android.accounts.AccountAuthenticator"
                    android:resource="@xml/authenticator"/>
        </service>

        <service
                android:name=".data.service.JSONRequestService"
                android:exported="false"/>

        <!-- Entry point -->
        <activity
                android:name=".app.account.EntryPointActivity"
                android:theme="@style/Theme.WM.NoActionBar"
                android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Account activities -->
        <activity
                android:name=".app.account.LoginActivity"
                android:theme="@style/Theme.WM.NoActionBar"
                android:noHistory="true"/>

        <activity
                android:name=".app.account.RegisterActivity"
                android:theme="@style/Theme.WM.NoActionBar"
                android:noHistory="true"/>

        <!-- Playground activities -->
        <activity android:name=".app.playground.scribble.ActiveGamesActivity"/>

        <activity android:name=".app.playground.scribble.board.ScribbleBoardActivity"/>
    </application>
</manifest> 
