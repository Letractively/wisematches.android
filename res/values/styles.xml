<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Wisematches" parent="Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_wisematches</item>
        <item name="popupMenuStyle">@style/PopupMenu.Wisematches</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wisematches</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Wisematches</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Wisematches</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Wisematches</item>
        <item name="actionModeBackground">@drawable/cab_background_top_wisematches</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_wisematches</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wisematches</item>

        <item name="android:buttonStyle">@style/Widget.WiseMatches.Button</item>
        <item name="android:windowBackground">@color/theme.color.background</item>
    </style>

    <style name="Theme.Wisematches.NoActionBar" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_wisematches</item>
        <item name="popupMenuStyle">@style/PopupMenu.Wisematches</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Wisematches</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Wisematches</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Wisematches</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Wisematches</item>
        <item name="actionModeBackground">@drawable/cab_background_top_wisematches</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_wisematches</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Wisematches</item>

        <item name="android:buttonStyle">@style/Widget.WiseMatches.Button</item>
        <item name="android:windowBackground">@color/theme.color.background</item>
    </style>

    <style name="ActionBar.Solid.Wisematches" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_wisematches</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_wisematches</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_wisematches</item>
        <item name="progressBarStyle">@style/ProgressBar.Wisematches</item>
    </style>

    <style name="ActionBar.Transparent.Wisematches" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_wisematches</item>
        <item name="progressBarStyle">@style/ProgressBar.Wisematches</item>
    </style>

    <style name="PopupMenu.Wisematches" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wisematches</item>
    </style>

    <style name="DropDownListView.Wisematches" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_wisematches</item>
    </style>

    <style name="ActionBarTabStyle.Wisematches" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_wisematches</item>
    </style>

    <style name="DropDownNav.Wisematches" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_wisematches</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_wisematches</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_wisematches</item>
    </style>

    <style name="ProgressBar.Wisematches" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_wisematches</item>
    </style>

    <style name="ActionButton.CloseMode.Wisematches" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_wisematches</item>
    </style>


    <style name="TextAppearance.WiseMatches" parent="android:TextAppearance.DeviceDefault.Small">
    </style>

    <style name="TextAppearance.WiseMatches.BoardWidgetCaption">
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@color/theme.color.background</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:shadowColor">#ffff0000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.WiseMatches.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.WiseMatches.Move">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.WiseMatches.Move.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/state.default.color</item>
    </style>

    <style name="TextAppearance.WiseMatches.Move.Empty">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/state.disabled.color</item>
    </style>

    <style name="TextAppearance.WiseMatches.Move.Link">
        <item name="android:textColor">@color/state.hover.color</item>
    </style>

    <style name="TextAppearance.WM" parent="android:TextAppearance.DeviceDefault.Small">
    </style>

    <style name="TextAppearance.WM.Error" parent="TextAppearance.WM">
        <item name="android:textColor">#ffcd0a0a</item>
    </style>

    <style name="TextAppearance.WM.Link" parent="TextAppearance.WM">
        <item name="android:textColor">#ff0000FF</item>
    </style>

    <style name="TextAppearance.WM.Player" parent="TextAppearance.WM">
        <item name="android:textColor">#ffa52a2a</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.WM.Player.Waiting" parent="TextAppearance.WM">
        <item name="android:textColor">#ff808080</item>
    </style>

    <style name="TextAppearance.WM.Label" parent="TextAppearance.WM">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.WiseMatches" parent="Widget">
        <item name="android:textColor">@color/widget.content.color</item>
        <item name="android:background">@drawable/ui_widget_content</item>
    </style>

    <style name="Widget.WiseMatches.Button" parent="Widget.WiseMatches">
        <item name="android:textColor">@color/ui_button</item>
        <item name="android:background">@drawable/ui_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.WiseMatches.Header" parent="Widget.WiseMatches">
        <item name="android:textColor">@color/widget.header.color</item>
        <item name="android:background">@drawable/ui_widget_header</item>
    </style>

    <style name="Widget.WiseMatches.Content" parent="Widget.WiseMatches">
        <item name="android:textColor">@color/widget.content.color</item>
        <item name="android:background">@drawable/ui_widget_content</item>
    </style>

    <style name="Widget.WiseMatches.Active" parent="Widget.WiseMatches">
        <item name="android:textColor">@color/state.active.color</item>
        <item name="android:background">@drawable/ui_widget_active</item>
    </style>

    <style name="Widget.WiseMatches.Highlight" parent="Widget.WiseMatches">
        <item name="android:textColor">@color/state.highlight.color</item>
        <item name="android:background">@drawable/ui_widget_highlight</item>
    </style>
</resources>