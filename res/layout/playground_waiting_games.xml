<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playgroundJoinErr"
            android:textAppearance="@style/TextAppearance.WM.Error"
            android:background="@drawable/ui_widget_error"
            android:textColor="@color/state.error.color"
            android:visibility="gone"/>

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@id/playgroundGamesList"
            android:divider="@color/state.default.border"
            android:smoothScrollbar="true"
            android:drawSelectorOnTop="false"
            android:layout_weight="1"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"
            android:dividerHeight="1dp"/>

</LinearLayout>