<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scribbleBoardBtnMake"
                    android:enabled="false"
                    android:singleLine="false"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/ic_board_make"
                    />

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal">
            </LinearLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scribbleBoardBtnExchange"
                    android:enabled="false"
                    android:singleLine="false"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/ic_board_exchange"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal">
            </LinearLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scribbleBoardBtnPass"
                    android:enabled="false"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/ic_board_pass"/>


        </LinearLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp">

            <view
                    android:layout_width="356px"
                    android:layout_height="370px"
                    class="wisematches.client.android.app.playground.scribble.board.BoardView"
                    android:id="@+id/scribbleBoardView"
                    android:layout_gravity="left|top"
                    android:background="@android:color/transparent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="false"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scribbleBoardBtnSelect"
                    android:enabled="true"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/ic_board_select"
                    android:clickable="false"
                    />

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal">
            </LinearLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:id="@+id/scribbleBoardBtnDeselect"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/ic_board_deselect"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:padding="0dp"
            android:layout_gravity="right"
            android:gravity="right">

        <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="?android:attr/listDivider"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:baselineAlignBottom="false"
                android:adjustViewBounds="false"
                android:cropToPadding="false"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="2dp"
            android:paddingTop="2dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Игроки"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:background="@color/theme.color.background"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:shadowColor="@color/abs__bright_foreground_disabled_holo_light"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="10dp"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0"
                    android:longClickable="false"
                    android:id="@+id/scribbleBoardPlayers">

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <view
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            class="wisematches.client.android.app.account.view.PersonalityView"
                            android:layout_column="0"
                            android:longClickable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <view
                            class="wisematches.client.android.app.account.view.PersonalityView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone">
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="gone">
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Прогресс"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@color/theme.color.background"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:shadowColor="@color/abs__bright_foreground_disabled_holo_light"
                    android:textSize="10dp"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <view
                    android:layout_width="fill_parent"
                    android:layout_height="16dp"
                    class="wisematches.client.android.app.playground.scribble.board.ProgressView"
                    android:id="@+id/scribbleBoardProgressView"
                    android:text="dsfasfdasdf asdf"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="фишек на доске/банке/руках"
                    android:id="@+id/scribbleBoardProgressText"
                    android:textSize="8dp"
                    android:layout_gravity="right"/>
        </LinearLayout>


        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Проверка слова"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:background="@color/theme.color.background"
                    android:layout_marginLeft="15dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:shadowColor="@color/abs__bright_foreground_disabled_holo_light"
                    android:textSize="10dp"/>
        </RelativeLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >

                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scribbleBoardDictField"
                        android:layout_weight="1"
                        android:singleLine="true"
                        style="@android:style/Widget.TextView"
                        android:layout_gravity="center"
                        android:autoText="false"
                        android:background="@android:drawable/editbox_background_normal"
                        android:selectAllOnFocus="true"
                        android:layout_margin="0dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/scribbleBoardBtnDict"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/board_dictionary_check"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>
            </LinearLayout>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scribbleBoardFltPoints"
                    android:singleLine="true"
                    android:layout_marginLeft="3dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>